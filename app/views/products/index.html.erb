<div class="container col-lg-6">
  <h3 class="text-primary">Your Products</h3>

  <ul class="list-group">
  <%  @products.each do |product| %>
  <li class="list-group-item card">
    <div class="d-flex flex-row text-truncate justify-content-start">
        <div class="p-1"><%= product.name %> -</div>
        <div class="p-1"><%= product.desciption %> -</div>
        <div class="p-1">Sale Price $<%= product.price %> </div>
    </div>
  </li>
  <% end %>
</ul>
<%= link_to "Create a product",new_product_path %>
</div>