<div class="container">
  <%= simple_form_for(@product) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :desciption %>
    <%= f.input :quantity %>
    <%= f.input :cost %>
    <%= f.input :price %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
  <% end %>
</div>
