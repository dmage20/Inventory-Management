<div class="d-flex container justify-content-center">
    <div class="card" style="width: 24rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @order.customer.name %></h5>
    <p class="card-text"><%= @order.customer.address %><br> Delivery: <%= @order.delivery_date %></p>
  </div>
  <ul class="list-group list-group-flush">
    <% @order_products.order('created_at  DESC').each do |order_product| %>
    <li class="list-group-item"> <%= order_product.product.name %> - <%= order_product.quantity %> Units <%= link_to "Remove", order_order_product_url(order_product.order,order_product), method: :delete %></li>
    <% end %>
    <li class="list-group-item"><%= render 'order_products/form' %></li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
    </div>
</div>
