<div class="container">
  <%= simple_form_for(@order) do |f| %>
  <div class="form-inputs">
    <%= f.input :delivery_date, as: :date %>
    <%= f.input :customer_id, collection:  @customers, prompt: "Choose a Customer"%>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-primary" %>
  </div>
  <% end %>
</div>