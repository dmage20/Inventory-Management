<%= simple_form_for([ @order, @order_product ], remote: true) do |form| %>
  <div class="form-inputs">
  <%= form.input :quantity %>
  <%= form.input :product_id, collection:  @products, prompt: "Choose a Product"%>
  </div>
   <div class="form-actions">
    <%= form.submit "Add Product", class: "btn-primary" %>
  </div>
<% end %>

