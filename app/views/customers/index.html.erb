<div class="container col-lg-6">
  <h3 class="text-primary">Customer List</h3>

  <ul class="list-group">
  <%  @customers.each do |customer| %>
  <li class="list-group-item card">
    <div class="d-flex flex-row text-truncate justify-content-start">
        <div class="p-1"><%= customer.name %> -</div>
        <div class="p-1"><%= customer.address %> </div>
    </div>
  </li>
  <% end %>
</ul>
<%= link_to "Create a new Customer",new_customer_path %>
</div>